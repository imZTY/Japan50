/* pages/game_main/gameMain.wxss */
.board-row{
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content:space-around;
}

.board-column{
  display: flex;
  flex-direction:row;
  align-items: center;
  width: 100%;
  height: 150rpx;
  flex-wrap:nowrap;
  justify-content:space-around;
  margin: 5% 0rpx;
}

.chessItem{
  display: flex;
  align-items: center;
  justify-content:flex-start;
  font-size: 72rpx;
  padding: 30rpx 50rpx;
  width: 23%;
  border: 4rpx solid #303F9F;
}

.message-box{
  height: 10%;
}
.game-board{
  height: 70%;
  margin: 3% 3%;
}

.message-text{
  display: flex;
  flex-direction:column;
}

.message-native{
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  margin: 2% 0rpx 0rpx 3%;
}

/* 头像 */
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}


/* 暂停按钮 */
.pause{
  width: 80rpx;
  height: 80rpx;
}


/* pages/note_add/noteAdd.wxss */


.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.help-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed; 
  top: 30%;
  left: 0;
  z-index: 9999;
  background: #C5CAE9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.help-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #212121;
  text-align: center;
}

.help-content {
  margin: 12rpx 27rpx 22rpx 36rpx;
  color: #757575;
}




.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #000;
  text-align: center;
}

.help-confirm {
  width: 100%;
  color: #000;
  text-align: center;
}